{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "config": true,
    "Stats": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "extends": [
    "vizzuality"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "config/webpack/development.js"
      }
    }
  },
  "rules": {
    "react/no-array-index-key": 0
  }
}
